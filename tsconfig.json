{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ES2022",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "outDir": "dist",
    "types": ["node"]
  },
  "include": ["src/**/*.ts", "examples/**/*.ts"]
}
